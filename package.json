{
  "name": "express-authentication-starter-api",
  "version": "0.0.1",
  "description": "A small, easily extendable base API for authentication, written with Express.js",
  "main": "server.js",
  "scripts": {
    "mongo:start": "docker run --name realworld-mongo -p 27017:27017 mongo & sleep 5",
    "mongo:stop": "docker stop realworld-mongo && docker rm realworld-mongo",
    "start": "set HTTPS=true && node server.js",
    "dev": "nodemon server.js",
    "test": "newman run ./tests/api-tests.postman.json -e ./tests/env-api-tests.postman.json",
    "stop": "lsof -ti :3000 | xargs kill"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/BCooperA/express-authentication-starter-api.git"
  },
  "author": "Tatu Kulmala",
  "license": "GPL",
  "bugs": {
    "url": ""
  },
  "homepage": "./",
  "dependencies": {
    "async": "^2.6.1",
    "bcrypt-nodejs": "0.0.3",
    "bluebird": "^3.5.1",
    "body-parser": "^1.18.3",
    "compression": "^1.7.2",
    "cookie-parser": "^1.4.3",
    "cors": "2.7.1",
    "dotenv": "^5.0.0",
    "ejs": "^2.6.1",
    "email-templates": "^2.7.1",
    "errorhandler": "1.4.3",
    "express": "^4.16.2",
    "express-jwt": "^5.3.0",
    "express-session": "^1.15.6",
    "express-validation": "^1.0.2",
    "express-validator": "^5.2.0",
    "helmet": "^3.12.1",
    "hoek": "^5.0.3",
    "joi": "^13.4.0",
    "jsonwebtoken": "^8.3.0",
    "lodash": "^4.17.10",
    "method-override": "^2.3.10",
    "methods": "1.1.2",
    "mongoose": "^4.13.14",
    "mongoose-unique-validator": "1.0.2",
    "morgan": "^1.9.0",
    "nodemailer": "^4.6.7",
    "nodemailer-mailgun-transport": "^1.4.0",
